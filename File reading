#include <stdio.h>
#include <stdlib.h>

float totalSale(float sales[], int n) {
    float total = 0;
    for (int i = 0; i < n; i++)
        total += sales[i];
    return total;
}

float maxSale(float sales[], int n) {
    float max = sales[0];
    for (int i = 1; i < n; i++)
        if (sales[i] > max)
            max = sales[i];
    return max;
}

int main() {
    FILE *file = fopen("sales.txt", "r");
    if (!file) {
        printf("Error al abrir el archivo.\n");
        return 1;
    }

    float temp;
    int count = 0;

    // Contar líneas
    while (fscanf(file, "%f", &temp) == 1)
        count++;

    rewind(file); // Volver al inicio

    float *sales = (float *)malloc(count * sizeof(float));
    if (!sales) {
        printf("Error de memoria.\n");
        fclose(file);
        return 1;
    }

    for (int i = 0; i < count; i++)
        fscanf(file, "%f", &sales[i];

    printf("Total de ventas: %.2f\n", totalSale(sales, count));
    printf("Venta máxima: %.2f\n", maxSale(sales, count));

    free(sales);
    fclose(file);
    return 0;
}

